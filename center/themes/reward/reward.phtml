{include file="library/header.lbi"}
<body>
{include file="library/navbar.lbi"}
{include file="library/sidebar.lbi"}

<!-- content -->
<div id="content">
    <div class="content-title">
        <h5 class="pull-left">{$subTitle}</h5>
        <div class="clear"></div>
    </div>
    <div class="adminGroup-main">
        {if $act eq 'view'}
        <div class="article-main-header">
            <form action="" method="get" />
            <fieldset>
                <p>
                <div class="pull-left">
                    显示
                    <select name="count" class="w75">
                        <option value="10" {if $count eq 10}selected="selected"{/if}>10</option>
                        <option value="25" {if $count eq 25}selected="selected"{/if}>25</option>
                        <option value="50" {if $count eq 50}selected="selected"{/if}>50</option>
                        <option value="100" {if $count eq 100}selected="selected"{/if}>100</option>
                    </select>
                    项结果
                </div>
                <div class="pull-right">
                    <label>会员编号：</label>
                    <input class="text-input w150" type="text" id="small-input" name="account" value="{$account}">&nbsp;
                    <!--
                    <label>奖金类型：</label>
                    <select name="type">
                        <option value="0">全部</option>
                        <option value="1" {if $status eq 1}selected="selected"{/if}>直推奖</option>
                        <option value="2" {if $status eq 2}selected="selected"{/if}>管理奖</option>
                    </select>
                    -->
                    <label>状态：</label>
                    <select name="status">
                        <option value="-1">全部</option>
                        <option value="1" {if $status eq 1}selected="selected"{/if}>待发放</option>
                        <option value="2" {if $status eq 2}selected="selected"{/if}>已发放</option>
                    </select>
                    <button type="submit" class="btn btn-default">搜索</button>
                </div>
                </p>
            </fieldset>
            </form>
            <div class="clear"></div>
            <fieldset>
                <div class="pull-left">
                    <a class="btn btn-primary" href="javascript:order_export();">导出全部奖金</a>
                    <a class="btn btn-primary" href="javascript:order_selected_export();">导出选中奖金</a>
                    <a class="btn btn-primary" href="javascript:reward_send();">奖金发放</a>
                </div>
                <div class="clear"></div>
            </fieldset>
        </div>
        {/if}
        {if $act eq 'view'}
        <table class="table">
            <thead>
            <tr>
                <th><a href="javascript:select_all();">全选</a>/<a href="javascript:deselect();">反选</a></th>
                <th>会员账号</th>
                <th>奖金</th>
                <th>奖金状态</th>
                <th>结算时间</th>
                <th>发放时间</th>
                <th>备注</th>
            </tr>
            </thead>
            <tbody>
            {foreach from=$reward_list item=reward}
            <tr>
                <td><input type="checkbox" name="id[]" value="{$reward.id}"/></td>
                <td>{$reward.account}</td>
                <td>{$reward.reward}</td>
                <td>{if $reward.status eq 1}待发放{else}已发放{/if}</td>
                <td>{date('Y-m-d H:i:s', $reward.add_time)}</td>
                <td>{if $reward.solve_time}{date('Y-m-d H:i:s', $reward.solve_time)}{else}未发放{/if}</td>
                <td>{$reward.remark}</td>
            </tr>
            {/foreach}
            <tr>
                <td></td>
                <td>小计:</td>
                <td>{$total_reward}</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td colspan="7">
                    <div class="pull-right">
                        <div class="pages">
                            <span>共有{$total}条，{$totalPage}页，每页显示：{$count}条</span>
                            {if $go_first}
                            <a href="?page=1&account={$account}&count={$count}&status={$status}">首页</a>
                            {/if}
                            {if $has_prev}
                            <a href="?page={$page - 1}&account={$account}&count={$count}&status={$status}">上一页</a>
                            {/if}
                            {if $has_many_prev}
                            ...
                            {/if}
                            {foreach from=$show_page item=pageNum}
                            {if $pageNum eq $page}
                            <b>{$page}</b>
                            {else}
                            <a href="?page={$pageNum}&account={$account}&count={$count}&status={$status}">{$pageNum}</a>
                            {/if}
                            {/foreach}
                            {if $has_many_next}
                            ...
                            {/if}
                            {if $go_last}
                            <a href="?page={$totalPage}&account={$account}&count={$count}&status={$status}">末页</a>
                            {/if}
                            {if $has_next}
                            <a href="?page={$page + 1}&account={$account}&count={$count}&status={$status}">下一页</a>
                            {/if}
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>奖金总计:</td>
                <td>{sprintf("%.2f", $recommend_reward+$manage_reward)}</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            </tbody>
        </table>
        <script type="text/javascript">
            function reward_send() {
                var form = $("<form>");
                form.attr({
                    "style":"display:none;",
                    "method": "post",
                    "action": window.location.href
                });

                var input = $("<input>");
                input.attr({
                    "type": "hidden",
                    "name": "opera",
                    "value": "send"
                });

                form.append(input);
                $("html").append(form);
                form.submit();
            }

            function order_export() {
                var form = $("<form>");
                form.attr({
                    "style":"display:none;",
                    "method": "post",
                    "action": window.location.href
                });

                var input = $("<input>");
                input.attr({
                    "type": "hidden",
                    "name": "opera",
                    "value": "export"
                });

                form.append(input);
                $("html").append(form);
                form.submit();
            }

            function order_selected_export() {
                var order_id = "";

                $("input[name='id[]']").each(function(i, e){
                    if(e.checked) {
                        order_id += e.value+",";
                    }
                });

                if(order_id == "") return false;

                var form = $("<form>");
                form.attr({
                    "style":"display:none;",
                    "method": "post",
                    "action": "order.php"
                });

                var input = $("<input>");
                input.attr({
                    "type": "hidden",
                    "name": "opera",
                    "value": "export"
                });

                form.append(input);

                var input = $("<input>");
                input.attr({
                    "type": "hidden",
                    "name": "order_id",
                    "value": order_id
                });

                form.append(input);

                $("html").append(form);
                form.submit();
            }

            function select_all() {
                $("input[name='id[]']").each(function(i, e){
                    e.checked = true;
                });
            }

            function deselect() {
                $("input[name='id[]']").each(function(i, e){
                    if(e.checked) {
                        e.checked = false;
                    } else {
                        e.checked = true;
                    }
                });
            }
        </script>
        {/if}
    </div>
</div>
<!-- END content -->

{include file="library/footer.lbi"}
</body>
</html>